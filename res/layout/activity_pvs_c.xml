<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp" >
        <Button
            android:id="@+id/game_pc_undo"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:background="@color/bg_gray"
            android:gravity="center"
            android:rotationX="180"
            android:rotationY="180"
            android:text="取消选择" />
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1.01" >
            <TextView
            android:id="@+id/pc_label"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="0.64"
            android:gravity="center"
            android:rotationX="180"
            android:rotationY="180"
            android:background="#ADD8E6"
            android:textColor="#FFFF0000"
            android:textSize="29dp" />
        </LinearLayout>
        <Button
            android:id="@+id/game_pc_pickover"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@color/bg_gray"
            android:text="确认捡完" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >
        <TextView
            android:id="@+id/textView2pc"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:text="                       "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/pvsp_pc_tv_result"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/pvsp_btn_del"
                android:layout_centerHorizontal="true"
                android:layout_weight="4.35"
                android:background="#ADD8E6"
                android:gravity="center"
                android:rotationX="180"
           	    android:rotationY="180"
                android:textColor="#FF0000FF"
                android:textSize="29dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView1pc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotationX="180"
            android:rotationY="180"
            android:text=" 可捡子数:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <com.example.chess.ChessViewPvsC
            android:id="@+id/chessviewpvsc"
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/pvsp_btn_again" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >
        <TextView
            android:id="@+id/game_pc_me_textView1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text=" 可捡子数:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/pvsp_pc_tv_me_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/pvsp_btn_del"
                android:layout_centerHorizontal="true"
                android:background="#ADD8E6"
                android:gravity="center"
                android:textColor="#FF0000FF"
                android:textSize="29dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp" >
        <Button
            android:id="@+id/game_pc_me_giveup"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:background="@color/bg_gray"
            android:text="认输" />
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1.01" >
            <TextView
                android:id="@+id/pc_me_label"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_weight="0.64"
                android:background="#ADD8E6"
                android:gravity="center"
                android:textColor="#FFFF0000"
                android:textSize="29dp" />
        </LinearLayout>
        <Button
            android:id="@+id/game_pc_me_undo"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@color/bg_gray"
            android:text="取消选择" />
    </LinearLayout>
</LinearLayout>